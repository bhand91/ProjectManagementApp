@page
@model ProjectManagementApp.Pages.ProjectMembers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProjectMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectMember.ID" />
            <input type = "hidden" asp-for="ProjectMember.ProjectID" />
            <input type ="hidden" asp-for="ProjectMember.MemberID" />
            <div class="form-group">
                <label asp-for="ProjectMember.Member.FirstName" class="control-label"></label>
                <input asp-for="ProjectMember.Member.FirstName" class="form-control" />
                <span asp-validation-for="ProjectMember.Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectMember.Member.LastName" class="control-label"></label>
                <input asp-for="ProjectMember.Member.LastName" class="form-control" />
                <span asp-validation-for="ProjectMember.Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-items="Model.EnumDropDown"  class="form-control">
                <option value="">--Select Role to Add--</option>
            </select>
             </div>
            <div class="form-group">
                <label asp-for="ProjectMember.AssignmentDes" class="control-label"></label>
                <input asp-for="ProjectMember.AssignmentDes" class="form-control" />
                <span asp-validation-for="ProjectMember.AssignmentDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
